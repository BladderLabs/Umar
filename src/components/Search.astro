<div class="relative group">
  <input 
    type="search"
    id="search-input"
    placeholder="Search posts..."
    class="w-64 px-4 py-2 bg-surface rounded-lg focus:ring-2 focus:ring-accent-primary focus:outline-none"
  />
  <div 
    id="search-results"
    class="absolute top-full mt-2 w-full bg-surface rounded-lg shadow-lg hidden group-focus-within:block"
  >
  </div>
</div>

<script>
  const searchInput = document.getElementById('search-input');
  const searchResults = document.getElementById('search-results');
  
  searchInput?.addEventListener('input', async (e) => {
    const query = (e.target as HTMLInputElement).value;
    if (query.length < 2) {
      searchResults!.innerHTML = '';
      return;
    }
    
    // Simulated search results
    const results = await simulateSearch(query);
    displayResults(results);
  });
  
  function simulateSearch(query: string) {
    // This would be replaced with actual search logic
    return Promise.resolve([
      { title: 'Example Result 1', href: '/learn/example-1' },
      { title: 'Example Result 2', href: '/books/example-2' },
    ]);
  }
  
  function displayResults(results: Array<{ title: string, href: string }>) {
    searchResults!.innerHTML = results
      .map(result => `
        <a 
          href="${result.href}"
          class="block px-4 py-2 hover:bg-bg-primary text-text-primary"
        >
          ${result.title}
        </a>
      `)
      .join('');
  }
</script>
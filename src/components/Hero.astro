---
import EmailSubscribe from './EmailSubscribe.astro';
---
<section class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gradient-to-b from-bg-primary to-bg-secondary">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_30%,rgba(61,155,233,0.1),transparent_40%)]"></div>
  
  <!-- Floating shapes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-accent-secondary/10 rounded-full filter blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-primary/10 rounded-full filter blur-3xl animate-float" style="animation-delay: -2s;"></div>
  </div>

  <div class="container mx-auto px-4 pt-20 relative z-10">
    <div class="text-center mb-8">
      <span class="inline-block text-highlight text-lg mb-4 scroll-animate">
        Welcome to my digital garden
      </span>
      <h1 class="font-display text-6xl md:text-8xl mb-6 scroll-animate">
        Transforming
        <span class="text-accent-primary">Ideas</span>
        Into Reality
      </h1>
    </div>
    
    <p class="text-xl md:text-2xl text-text-secondary text-center max-w-2xl mx-auto mb-12 scroll-animate">
      Exploring thoughts, learnings, and stories that inspire growth and creativity
    </p>
    
    <div class="flex justify-center space-x-6 mb-16 scroll-animate">
      <a 
        href="/learn" 
        class="group px-8 py-3 bg-accent-primary text-text-primary rounded-lg hover:bg-accent-primary/90 transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
      >
        <span class="inline-block transform group-hover:translate-x-1 transition-transform">
          Start Learning →
        </span>
      </a>
      <a 
        href="/books" 
        class="group px-8 py-3 border-2 border-accent-secondary text-accent-secondary rounded-lg hover:bg-accent-secondary/10 transition-all duration-300 transform hover:scale-105"
      >
        <span class="inline-block transform group-hover:translate-x-1 transition-transform">
          Explore Books →
        </span>
      </a>
    </div>
    
    <div class="mt-16 scroll-animate">
      <EmailSubscribe />
    </div>
  </div>
  
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce text-highlight">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      class="h-8 w-8"
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M19 14l-7 7m0 0l-7-7m7 7V3"
      />
    </svg>
  </div>
</section>

<script>
  import { setupScrollAnimations } from '../utils/animations';
  
  // Initialize animations when the component mounts
  document.addEventListener('DOMContentLoaded', () => {
    setupScrollAnimations();
  });
</script>